model Comments {
  id        String        @id @default(uuid())
  content   String        @db.Text
  authorId  String
  postId    String
  post      Post          @relation(fields: [postId], references: [id])
  parentId  String?
  comment   Comments?     @relation("CommentReply", fields: [parentId], references: [id])
  reply     Comments[]    @relation("CommentReply")
  status    CommentStatus @default(APPROVED)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([postId])
  @@index([authorId])
  @@map("comments")
}



enum CommentStatus {
  APPROVED
  REJECT
}